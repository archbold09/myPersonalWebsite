---
import { skills, skillCategories, getSkillsByCategory } from '../../data/skills';
import type { Skill } from '../../types';
---

<div class="space-y-12">
  {skillCategories.map((category) => {
    const categorySkills = getSkillsByCategory(category.id as Skill['category']);
    if (categorySkills.length === 0) return null;

    return (
      <div>
        <h3 class="text-xl font-semibold mb-6 flex items-center gap-3">
          <span class="w-10 h-10 rounded-lg bg-primary-500/20 flex items-center justify-center">
            {category.id === 'backend' && (
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
              </svg>
            )}
            {category.id === 'frontend' && (
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            )}
            {category.id === 'database' && (
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
              </svg>
            )}
            {category.id === 'tools' && (
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            )}
          </span>
          {category.label}
        </h3>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          {categorySkills.map((skill) => (
            <div class="glass p-4 card-hover group">
              <div class="flex flex-col items-center text-center">
                <div
                  class="w-12 h-12 rounded-xl mb-3 flex items-center justify-center transition-transform group-hover:scale-110"
                  style={`background-color: ${skill.color}20;`}
                >
                  <span class="text-2xl font-bold" style={`color: ${skill.color};`}>
                    {skill.name.charAt(0)}
                  </span>
                </div>
                <h4 class="font-medium text-sm mb-2">{skill.name}</h4>
                <div class="w-full bg-slate-700 rounded-full h-1.5">
                  <div
                    class="h-1.5 rounded-full transition-all duration-500"
                    style={`width: ${skill.level}%; background-color: ${skill.color};`}
                  ></div>
                </div>
                <span class="text-xs text-slate-400 mt-1">{skill.level}%</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    );
  })}
</div>
