---
import { personal } from '../../data/personal';
import GradientText from '../common/GradientText.astro';
---

<section class="min-h-[calc(100vh-6rem)] flex items-center">
  <div class="section-container">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left fade-in-up">
        <div class="mb-6">
          <span class="inline-block px-4 py-2 rounded-full glass text-sm font-medium text-primary-500 mb-4">
            Software Developer
          </span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight text-slate-900 dark:text-white">
          <span class="lang-es">Hola, soy</span>
          <span class="lang-en hidden">Hi, I'm</span>
          <br />
          <GradientText as="span" class="text-5xl sm:text-6xl lg:text-7xl">
            {personal.name}
          </GradientText>
        </h1>

        <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-300 mb-8 max-w-xl mx-auto lg:mx-0 leading-relaxed">
          <span class="lang-es">
            Especializado en <strong class="text-slate-900 dark:text-white">desarrollo web, servicios cloud y ciencia de datos</strong>.
            Con más de <strong class="text-primary-500">6 años de experiencia</strong> creando software para
            <strong class="text-slate-900 dark:text-white">grandes y pequeñas empresas</strong>.
          </span>
          <span class="lang-en hidden">
            Specialized in <strong class="text-slate-900 dark:text-white">web development, cloud services and data science</strong>.
            With over <strong class="text-primary-500">6 years of experience</strong> building software for
            <strong class="text-slate-900 dark:text-white">large and small companies</strong>.
          </span>
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#about" class="btn-primary inline-flex items-center justify-center gap-2">
            <span class="lang-es">Conocer más</span>
            <span class="lang-en hidden">Learn more</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>

          <a
            href={personal.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-glass inline-flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span>LinkedIn</span>
          </a>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-6 max-w-md mx-auto lg:mx-0">
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text">6+</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">
              <span class="lang-es">Años de exp.</span>
              <span class="lang-en hidden">Years of exp.</span>
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text">15+</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">
              <span class="lang-es">Proyectos</span>
              <span class="lang-en hidden">Projects</span>
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold gradient-text">10+</div>
            <div class="text-sm text-slate-500 dark:text-slate-400">
              <span class="lang-es">Tecnologías</span>
              <span class="lang-en hidden">Technologies</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Image/Illustration -->
      <div class="relative hidden lg:block">
        <div class="relative z-10">
          <img
            src="/images/hero/developer-illustration.svg"
            alt="Angel Archbold - Software Developer"
            class="w-full h-auto max-w-lg mx-auto"
            loading="eager"
          />
        </div>

        <!-- Decorative elements - Emerald/Teal colors -->
        <div class="absolute -top-10 -right-10 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-10 -left-10 w-64 h-64 bg-accent-teal/20 rounded-full blur-3xl"></div>

        <!-- Floating tech badges -->
        <div class="absolute top-1/3 -right-4 glass px-3 py-2 rounded-lg animate-float" style="animation-delay: -1s;">
          <span class="text-sm font-medium text-slate-800 dark:text-white">Node.js</span>
        </div>
        <div class="absolute bottom-20 -left-8 glass px-3 py-2 rounded-lg animate-float" style="animation-delay: -2s;">
          <span class="text-sm font-medium text-slate-800 dark:text-white">Go</span>
        </div>
        <div class="absolute bottom-10 right-10 glass px-3 py-2 rounded-lg animate-float" style="animation-delay: -3s;">
          <span class="text-sm font-medium text-slate-800 dark:text-white">Python</span>
        </div>
        <div class="absolute bottom-10 right-10 glass px-3 py-2 rounded-lg animate-float" style="animation-delay: -3s;">
          <span class="text-sm font-medium text-slate-800 dark:text-white">Java</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
</style>

<script>
  // Initialize language on Hero
  function updateHeroLanguage(lang: 'es' | 'en') {
    const heroEl = document.querySelector('section');
    if (!heroEl) return;

    heroEl.querySelectorAll('.lang-es').forEach(el => {
      el.classList.toggle('hidden', lang !== 'es');
    });
    heroEl.querySelectorAll('.lang-en').forEach(el => {
      el.classList.toggle('hidden', lang !== 'en');
    });
  }

  // Listen for language changes
  window.addEventListener('language-change', ((e: CustomEvent) => {
    updateHeroLanguage(e.detail.language);
  }) as EventListener);

  // Initialize with saved language
  const savedLang = localStorage.getItem('language') as 'es' | 'en' || 'es';
  updateHeroLanguage(savedLang);
</script>
