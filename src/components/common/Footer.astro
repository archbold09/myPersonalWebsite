---
import { personal } from '../../data/personal';
---

<footer id="footer" class="relative z-10 mt-20">
  <div class="section-container py-12">
    <div class="glass p-8 md:p-12">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <h3 class="text-xl font-display font-bold mb-6 gradient-text">
            <span class="lang-es">Informacion de Contacto</span>
            <span class="lang-en hidden">Contact Information</span>
          </h3>

          <div class="space-y-4">
            <!-- Phone Numbers -->
            <div class="flex items-start gap-3">
              <div class="p-2 rounded-lg bg-primary-500/20">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-500 dark:text-slate-400">
                  <span class="lang-es">Teléfono</span>
                  <span class="lang-en hidden">Phone</span>
                </p>
                <p class="font-medium text-slate-800 dark:text-white">{personal.phones.join(' - ')}</p>
              </div>
            </div>

            <!-- Emails -->
            <div class="flex items-start gap-3">
              <div class="p-2 rounded-lg bg-primary-500/20">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-500 dark:text-slate-400">Email</p>
                {personal.emails.map((email) => (
                  <a href={`mailto:${email}`} class="block font-medium text-slate-800 dark:text-white hover:text-primary-500 transition-colors">
                    {email}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div>
          <h3 class="text-xl font-display font-bold mb-6 gradient-text">
            <span class="lang-es">Sígueme</span>
            <span class="lang-en hidden">Follow Me</span>
          </h3>

          <div class="flex flex-wrap gap-4">
            <!-- GitHub -->
            <a
              href={personal.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-4 py-3 rounded-xl bg-slate-100 dark:bg-white/5 hover:bg-slate-200 dark:hover:bg-white/10 border border-slate-200 dark:border-white/10 transition-all duration-300 hover:-translate-y-1"
            >
              <div class="w-8 h-8 rounded-lg bg-slate-800 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <span class="font-medium text-slate-800 dark:text-white">GitHub</span>
            </a>

            <!-- LinkedIn -->
            <a
              href={personal.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-4 py-3 rounded-xl bg-slate-100 dark:bg-white/5 hover:bg-slate-200 dark:hover:bg-white/10 border border-slate-200 dark:border-white/10 transition-all duration-300 hover:-translate-y-1"
            >
              <div class="w-8 h-8 rounded-lg bg-blue-600 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <span class="font-medium text-slate-800 dark:text-white">LinkedIn</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="mt-12 pt-8 border-t border-slate-200 dark:border-white/10 flex flex-col md:flex-row items-center justify-between gap-4">
        <a href="/" class="flex items-center group">
          <span class="text-lg font-display font-bold text-slate-900 dark:text-white transition-colors group-hover:text-primary-500">
            Angel<span class="gradient-text">Archbold</span>
          </span>
        </a>

        <p class="text-sm text-slate-500 dark:text-slate-400 text-center">
          <span class="lang-es">&copy; {new Date().getFullYear()} Angel Archbold. Todos los derechos reservados.</span>
          <span class="lang-en hidden">&copy; {new Date().getFullYear()} Angel Archbold. All rights reserved.</span>
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  // Language switching for footer
  function updateFooterLanguage(lang: 'es' | 'en') {
    const footer = document.getElementById('footer');
    if (!footer) return;

    footer.querySelectorAll('.lang-es').forEach(el => {
      el.classList.toggle('hidden', lang !== 'es');
    });
    footer.querySelectorAll('.lang-en').forEach(el => {
      el.classList.toggle('hidden', lang !== 'en');
    });
  }

  // Listen for language changes
  window.addEventListener('language-change', ((e: CustomEvent) => {
    updateFooterLanguage(e.detail.language);
  }) as EventListener);

  // Initialize with saved language
  const savedLang = localStorage.getItem('language') as 'es' | 'en' || 'es';
  updateFooterLanguage(savedLang);
</script>
