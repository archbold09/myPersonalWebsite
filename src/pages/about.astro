---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfileCard from '../components/about/ProfileCard.astro';
import Timeline from '../components/about/Timeline.astro';
import SkillsGrid from '../components/about/SkillsGrid.astro';
import { experiences, education } from '../data/experience';
import { personal } from '../data/personal';
---

<BaseLayout
  title="Sobre Mi"
  description={`Conoce mas sobre ${personal.fullName}, ${personal.title} con mas de 6 años de experiencia.`}
>
  <!-- Page Header -->
  <section class="py-12">
    <div class="section-container">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-display font-bold mb-4">
          Sobre <span class="gradient-text">Mi</span>
        </h1>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Conoce mi trayectoria profesional, experiencia y las tecnologias con las que trabajo.
        </p>
      </div>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="pb-20">
    <div class="section-container">
      <div class="max-w-3xl mx-auto">
        <ProfileCard />
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="py-20">
    <div class="section-container">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-display font-bold mb-4">
          Experiencia <span class="gradient-text">Laboral</span>
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Mi recorrido profesional en el desarrollo de software.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <Timeline items={experiences} type="experience" />
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section class="py-20">
    <div class="section-container">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-display font-bold mb-4">
          <span class="gradient-text">Estudios</span>
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Mi formacion academica y aprendizaje continuo.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <Timeline items={education} type="education" />
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-20">
    <div class="section-container">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-display font-bold mb-4">
          Conocimientos de <span class="gradient-text">Programacion</span>
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Lenguajes, frameworks, bases de datos y herramientas que domino.
        </p>
      </div>

      <SkillsGrid />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="section-container">
      <div class="glass text-center p-12">
        <h2 class="text-2xl sm:text-3xl font-display font-bold mb-4">
          ¿Quieres ver mis <span class="gradient-text">proyectos</span>?
        </h2>
        <p class="text-slate-400 max-w-xl mx-auto mb-8">
          Explora mi portafolio y descubre los proyectos en los que he trabajado.
        </p>
        <a href="/projects" class="btn-primary inline-flex items-center gap-2">
          Ver Proyectos
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
