---
import '../styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

import Navbar from '../components/common/Navbar.astro';
import Footer from '../components/common/Footer.astro';
import AnimatedBackground from '../components/common/AnimatedBackground.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = 'Angel Archbold - Senior Fullstack Developer with 6+ years of experience building web applications.',
  image = '/images/hero/inicio1.png',
  type = 'website'
} = Astro.props;

const siteUrl = 'https://angelarchbold.dev';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | Angel Archbold</title>
    <meta name="title" content={`${title} | Angel Archbold`} />
    <meta name="description" content={description} />
    <meta name="author" content="Angel Junior Torres Archbold" />
    <meta name="keywords" content="Angel Archbold, Fullstack Developer, Web Developer, JavaScript, React, Vue, Node.js, PHP" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={`${title} | Angel Archbold`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, siteUrl)} />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={`${title} | Angel Archbold`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, siteUrl)} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon32x32.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0f172a" />
    <meta name="color-scheme" content="dark light" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <!-- Animated Background -->
    <AnimatedBackground />

    <!-- Navigation -->
    <Navbar />

    <!-- Main Content -->
    <main class="flex-1 relative z-10">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Theme Toggle Script -->
    <script is:inline>
      // Check for saved theme preference or default to dark
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return 'dark';
      };

      const theme = getTheme();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
        document.documentElement.classList.add('light');
      } else {
        document.documentElement.classList.add('dark');
        document.documentElement.classList.remove('light');
      }

      // Listen for theme toggle
      window.addEventListener('theme-toggle', () => {
        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
          document.documentElement.classList.remove('dark');
          document.documentElement.classList.add('light');
          localStorage.setItem('theme', 'light');
        } else {
          document.documentElement.classList.add('dark');
          document.documentElement.classList.remove('light');
          localStorage.setItem('theme', 'dark');
        }
      });
    </script>
  </body>
</html>
